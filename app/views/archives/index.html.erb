<div class="columns is-centered">
	<div class="column is-half">
		<% @entries.each do |day, entries| %>
			<h3 class="is-size-4 has-text-weight-bold mt-4 mb-2 has-text-centered">Entries for <%= day %></h3>
			<% entries.each do |entry| %>
				<%= link_to entry_path(entry) do %>
					<div class="card">
						<div class="card-content">
							<strong><%= entry.meal_type %></strong><br/>
							<%= entry.calories %> calories,
							<%= entry.protiens %>g protiens,
							<%= entry.carbohydrates %>g carbohydrates,
							<%= entry.fats %>g fats
						</div>
					</div>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>